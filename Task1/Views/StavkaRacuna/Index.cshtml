@model IEnumerable<Task1.Data.StavkaRacuna>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Kreirajte novu stavku računa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProizvodId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kolicina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProizvodId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kolicina)
    </td>
    <td>
        @Html.ActionLink("Izmena", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Detalji", "Details", new { id = item.ID }) |
        @Html.ActionLink("Brisanje", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
