@model IEnumerable<Task1.Models.PregledStavkiRacunaView>

@{
    ViewBag.Title = "Stavke računa ";
}

<h2>@ViewBag.Title @ViewBag.Racun</h2>

<p>
    @Html.ActionLink("Kreirajte novu stavku računa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Proizvod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kolicina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ukupno)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Proizvod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kolicina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ukupno)
        </td>
        <td>
            @Html.ActionLink("Izmena", "Edit", new { id = item.ID }, null) |
            @Html.ActionLink("Brisanje", "Delete", new { id = item.ID }, null)
        </td>
    </tr>
    }

</table>
